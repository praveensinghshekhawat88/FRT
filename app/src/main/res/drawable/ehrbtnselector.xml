<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:drawable="@drawable/shape_rect_background_orange_rounded_corner_layout"/>
    <item android:state_pressed="true" android:drawable="@drawable/shape_rect_background_orange_rounded_corner_layout" />
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="15dp">
            </corners>
            <stroke android:width="2dp" android:color="@color/colorActionBar" />

            <gradient
                android:startColor="@color/colorAccent"
                android:endColor="@color/lightyellow"
                android:angle="90">

            </gradient>
        </shape>
    </item></selector>