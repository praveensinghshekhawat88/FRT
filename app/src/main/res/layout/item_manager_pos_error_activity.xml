<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crd_item"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">
   <RelativeLayout
       android:id="@+id/rl_item"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="@dimen/_10sdp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_toStartOf="@+id/tv_item_status"
          android:paddingEnd="@dimen/_5sdp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/errorregno"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorActionBar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorActionBar"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/texterrorregno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorActionBar"

                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5sp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fps_code"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fpscode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"


             >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/district"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDistrictName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5sp"
             android:visibility="gone">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remark"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5sp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/errortype"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/holo_blue_dark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5sp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/errorstatus"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/errortype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5sp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reg_date"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/regdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

         <LinearLayout
             android:id="@+id/expenseCompletedDateLay"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5sp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resolved_date"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text=" : "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/resolvedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

      </LinearLayout>
      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tv_item_status"
          android:layout_width="@dimen/_65sdp"
          android:layout_height="@dimen/_27sdp"
          android:background="@drawable/bg_rounded_corner_layout"
          android:fontFamily="@font/roboto_regular"
          android:gravity="center"
          android:text="@string/status"
          android:textColor="@color/white"
          android:textSize="@dimen/_12sdp"
          android:visibility="invisible"
          android:layout_centerVertical="true"
          android:layout_alignParentEnd="true"/>


      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tv_update"
          android:layout_width="@dimen/_65sdp"
          android:layout_height="@dimen/_27sdp"
          android:background="@drawable/bg_rounded_corner_layout"
          android:fontFamily="@font/roboto_regular"
          android:gravity="center"
          android:text="@string/update"
          android:textColor="@color/white"
          android:textSize="@dimen/_12sdp"
          android:visibility="visible"
          android:layout_centerVertical="true"
          android:layout_alignParentEnd="true"/>
      <ProgressBar
          android:id="@+id/progressBar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:visibility="gone"
          />
   </RelativeLayout>
</androidx.cardview.widget.CardView>