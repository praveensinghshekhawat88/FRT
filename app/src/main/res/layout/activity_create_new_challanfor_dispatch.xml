        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputCourierTrackingNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_rect_background_gray_rounded_corner_layout_5"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/courier_tracking_number"
            android:inputType="number"
            android:padding="10sp"
            android:textColor="@color/grayDark"
            android:textSize="14sp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputCourierName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/shape_rect_background_gray_rounded_corner_layout_5"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/courier_name"
            android:padding="10sp"
            android:singleLine="true"
            android:textColor="@color/grayDark"
            android:textSize="14sp"
            android:visibility="visible" />

