<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:orientation="vertical"
        tools:context=".ui.login.LoginActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape_rect_border_gray_layout">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/rcsc" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:scrollbars="none"
            android:padding="10sp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="200sp"
                    android:layout_height="130sp"
                    android:src="@drawable/lust"
                    android:layout_gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/helpdesk"
                    android:textAllCaps="true"
                    android:textColor="@color/grayDark"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_engineer"
                    android:textColor="@color/colorOrange"
                    android:textSize="25sp"
                    android:fontFamily="@font/roboto_medium"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="30sp"
                    android:background="@drawable/shape_rect_top_right_corner_rounded_layout">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_your_mobile_no"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:textColor="@color/grayDark"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/inputPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/roboto_regular"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="10sp"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:imeOptions="actionDone"
                        android:background="@drawable/shape_rect_rounded_border_10px_layout"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:hint="@string/send_otp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="onClickSendOTP"
                        android:textColorHint="@color/colorGreen"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/shape_rect_rounded_border_5px_layout"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5sp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textResendOTP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resend_otp"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="16sp"
                            android:onClick="onClickResendOTP"
                            android:textColor="@color/grayDark"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resend_otp"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:textColor="@color/grayDark"/>
                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_otp_here"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/grayDark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp"
                        android:weightSum="6"
                        android:background="@drawable/shape_rect_rounded_border_10px_layout">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/edit_1"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="15sp"
                                android:paddingStart="15dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="15dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/edit_2"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="15sp"
                                android:paddingStart="15dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="15dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/edit_3"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="15sp"
                                android:paddingStart="15dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="15dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/edit_4"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="15sp"
                                android:paddingStart="15dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="15dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/edit_5"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="15sp"
                                android:paddingStart="15dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="15dp"
                                android:paddingBottom="10dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/edit_6"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="15sp"
                                android:paddingStart="15dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="15dp"
                                android:imeOptions="actionDone"
                                android:paddingBottom="10dp"
                                android:singleLine="true" />
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/inputOTP"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/roboto_regular"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="15sp"
                        android:paddingLeft="10sp"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:background="@drawable/shape_rect_rounded_border_10px_layout"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:hint="@string/login"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColorHint="@color/white"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/shape_rect_rounded_border_background_blue_layout"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="15sp">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="40sp"
                            android:layout_height="50sp"
                            android:src="@drawable/rcsc_2"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/rcsc_3"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>