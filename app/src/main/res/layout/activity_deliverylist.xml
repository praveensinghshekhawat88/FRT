<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <include
        android:id="@+id/action_bar"
        layout="@layout/global_action_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/layoutNormalView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/action_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/installation_pending"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintRight_toLeftOf="@+id/buttonexcel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Count"
                    android:visibility="visible"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:id="@+id/buttonprint"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_round_corner_outline"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="visible"
                    android:layout_marginRight="10dp">



                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="124"
                        android:layout_gravity="center_horizontal"

                        android:gravity="center_vertical"
                        android:visibility="visible"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonexcel"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_round_corner_yellowoutline"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"

                    android:src="@drawable/excel_two" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:id="@+id/layoutFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="8sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/rl_district"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_rounded_border_gray_layout">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_toStartOf="@+id/iv_dropdownDistrict"
                        android:background="@null"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_dropdownDistrict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/ic_arrow_down" />
                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/se_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/shape_rect_rounded_border_gray_layout"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/district"
                    android:imeOptions="actionNext"
                    android:padding="10sp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"


                    />
            </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_rect_rounded_border_gray_layout"
                    android:visibility="visible"
                    android:padding="3sp"
                    android:layout_weight="1"



                    >

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/inputfps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:gravity="left"
                        android:padding="5dp"
                        android:background="@null"
                        android:hint="@string/fps_code"

                        android:singleLine="true"
                        android:visibility="visible" />
                </LinearLayout>

















                <Space
                    android:id="@+id/spacer"
                    android:layout_width="10sp"
                    android:layout_height="match_parent"
                    android:visibility="visible"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_rounded_border_gray_layout">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_dropdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/ic_arrow_down" />
                </RelativeLayout>
            </LinearLayout>




            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_date_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/textFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_rounded_border_gray_layout"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:focusable="false"
                    android:hint="@string/from_date"
                    android:drawableStart="@drawable/ic_date_range"
                    android:paddingStart="10sp"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="10sp"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/textToDate"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_rounded_border_gray_layout"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:focusable="false"
                    android:hint="@string/to_date"
                    android:drawableStart="@drawable/ic_date_range"
                    android:paddingStart="10sp"
                    android:textSize="16sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/btnsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:background="@drawable/round_btn_blue_layout"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:textStyle="bold"
                    android:text="@string/filter"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >
           <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_delivered"
                android:layout_width="match_parent"
                android:layout_height="0dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"

            />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_no_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/no_record_found"
                android:visibility="gone"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

















</androidx.constraintlayout.widget.ConstraintLayout>