<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.inventory.DispatchChallanListActivity">
    <include
        android:id="@+id/action_bar"
        layout="@layout/global_action_bar"/>

    <!--<androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCreateNewChallanforDispatch"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="@drawable/shape_rect_login_button_layout"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/create_dispatch_stock"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="15sp"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_margin="10sp"
        android:background="@drawable/shape_rect_rounded_border_gray_layout">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"
            android:src="@drawable/ic_arrow_down" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null" />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_date_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:visibility="gone">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textFromDate"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_rounded_border_gray_layout"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:focusable="false"
            android:hint="@string/from_date"
            android:drawableStart="@drawable/ic_date_range"
            android:paddingStart="10sp"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />
        <Space
            android:layout_width="10sp"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textToDate"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_rounded_border_gray_layout"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:focusable="false"
            android:hint="@string/to_date"
            android:drawableStart="@drawable/ic_date_range"
            android:paddingStart="10sp"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dispatch_challan_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textNoDispatchChallan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_record_found"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>