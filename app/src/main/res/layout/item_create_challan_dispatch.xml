<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    android:weightSum="10"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/iv_checkbox"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_uncheck_box"/>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/inputProductAvailableQty"
            android:layout_toEndOf="@+id/check_box_item_name"
            android:maxLines="2"
            android:text="item_1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_14sdp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/inputProductAvailableQty"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toStartOf="@+id/plus_minus_lay"
        android:background="@drawable/shape_rect_background_gray_rounded_corner_layout_5"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_weight="1.5"/>

    <RelativeLayout
        android:id="@+id/plus_minus_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5">

        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/minus" />

        <EditText
            android:id="@+id/inputProductCount"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_minus"
            android:background="@drawable/shape_rect_background_gray_rounded_corner_layout_5"
            android:enabled="true"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/inputProductCount"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/add" />
    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
</layout>