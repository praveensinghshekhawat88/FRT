<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.reports.MonthlyReportsActivity">
        <include
            android:id="@+id/action_bar"
            layout="@layout/global_action_bar" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textSelectYearMonth"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_gravity="center"
            android:background="@drawable/shape_rect_rounded_border_gray_layout"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:focusable="false"
            android:hint="@string/select_year_month"
            android:drawableLeft="@drawable/ic_date_range"
            android:layout_margin="10sp"
            android:paddingLeft="10sp"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_district"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/shape_rect_rounded_border_gray_layout"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerDistrict"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/iv_dropdownDistrict"
                android:background="@null" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_dropdownDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5sp"
                android:src="@drawable/ic_arrow_down" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_monthlyReports"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textNoComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/no_record_found"
                android:textSize="18sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</layout>