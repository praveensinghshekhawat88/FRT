<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/shape_rect_rounded_border_10px_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/machine_type"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="6"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textMachineType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mobiocean"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fps_code"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="6"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textFpsCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dealer_name"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="6"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDealerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Abc Test"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dealer_phone_number"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="6"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDealerPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/your_issue"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="6"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textYourIssue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="RD Issue"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="4"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baner"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>