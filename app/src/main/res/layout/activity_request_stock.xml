<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.inventory.RequestStockActivity">
    <include
        android:id="@+id/action_bar"
        layout="@layout/global_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonRequestStock"
        android:layout_below="@+id/action_bar"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parts_list_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp" />

            <ImageView
                android:id="@+id/buttonAddLayout"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonRequestStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlue"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/request_stock"
        android:textColorHint="@color/white"
        android:textSize="16sp" />
</RelativeLayout>